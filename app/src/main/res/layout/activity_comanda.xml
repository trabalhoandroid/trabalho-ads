<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context="com.example.ednaldojunior89.resoftsystemas.Comanda">

    <Button
        android:id="@+id/button10"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_orange_dark"
        android:text="sobremesas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"/>

    <Button
        android:id="@+id/bebidas"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_green_light"
        android:text="Bebidas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="?attr/actionModeSplitBackground"
        android:drawableRight="@drawable/prato"
        android:paddingLeft="60dp"
        android:paddingRight="20dp"
        android:text="Meu Pedido"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="356dp"
        android:layout_height="164dp"
        android:background="@drawable/fahcada_almoco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <ListView
        android:id="@+id/list_comanda"
        android:layout_width="353dp"
        android:layout_height="198dp"
        android:autofillHints="@color/zxing_possible_result_points"
        android:background="@color/zxing_status_text"
        android:backgroundTint="@color/zxing_status_text"
        android:clickable="false"
        android:divider="@color/zxing_custom_result_view"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945"
        tools:layout_editor_absoluteY="297dp"/>

    <Button
        android:id="@+id/pratos"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_orange_light"
        android:text="Pratos"
        android:onClick="startSecondActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"/>
</android.support.constraint.ConstraintLayout>
